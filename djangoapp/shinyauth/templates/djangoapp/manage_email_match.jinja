{% extends 'base.jinja' %}

{% block content %}

  <div class="container mt-3 mb-5">
    {% if create %}
      <h2>Create new email match</h2>
    {% else %}
      <h2>Manage email match: {{ match.name }}</h2>
    {% endif %}
    <hr>
    <form method="POST">
      {% csrf_token %}
      <div class="form-group">
        {# Two text inputs: name and match #}
        <label for="name" class="form-label">Name</label>
        <input type="text" class="form-control" id="name" name="name"
               value="{{ match.name }}">
      </div>
      <div class="form-group mt-3">
        <label for="email_regex" class="form-label">Match email regex</label>
        <input type="text" class="form-control" id="match" name="email_regex"
               value="{{ match.email_regex }}">
      </div>
      <button type="submit" class="btn btn-primary mt-3">Submit</button>
    </form>
    
  </div>
{% endblock %}
