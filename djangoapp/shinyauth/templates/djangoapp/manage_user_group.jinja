{% extends 'base.jinja' %}

{% block content %}

  <div class="container mt-3">
    {% if create %}
      <h2>Create new user group</h2>
    {% else %}
      <h2>Manage user group: {{ group.name }}</h2>
    {% endif %}
    <hr>
    <form method="POST">
      {% csrf_token %}
      <div class="form-group">
        {# Two text inputs: name and match #}
        <label for="name" class="form-label">Name</label>
        <input type="text" class="form-control" id="name" name="name"
               value="{{ form.name.value() or "" }}">
      </div>
      <div class="form-group mt-3">
        <label for="email_matches" class="form-label">Email matches</label>
        {{ form.email_matches}}
        <a href="{{ url('create_email_match') }}">Create new email match</a>
      </div>
      <button type="submit" class="btn btn-primary mt-3">Submit</button>
    </form>
    
  </div>
{% endblock %}
