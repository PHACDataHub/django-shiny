{% extends 'base.jinja' %}
{% set login_form = true %}
{% block title %}<title>Login</title>
{% endblock %}
{% block content %}
  <div class="container p-0 d-flex justify-content-center"
       id="login-container">
    <div class="col-md-6 col-sm-12">
      <div class="alert alert-success fade show">
        <div>A login link has been sent to your email address.</div>
        <div class="mt-2">Click the link to login automatically.</div>
        <div class="mt-2 fw-semibold">Please allow 15 seconds for link to arrive.</div>
      </div>
    </div>
  </div>
{% endblock content %}
